.small_center_form
  %h2= "Sign Up to Everest"
  = semantic_form_for @employee, :url => signup_path do |f|
    = f.inputs do
      = f.input :first_name
      = f.input :last_name
      = f.input :email
      = f.input :password, :as => :password
      = f.input :password_confirmation, :as => :password
    = f.buttons do  
      = f.commit_button "Sign Up"
